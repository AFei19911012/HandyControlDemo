<UserControl x:Class="HandyControlDemo.UserControl.AnimationPath"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d">
    <hc:TransitioningContentControl>
        <Viewbox Margin="5" Width="256" Height="256">
            <hc:AnimationPath VerticalAlignment="Center" Duration="0:0:5" Stretch="Uniform" Width="64" Height="64" StrokeThickness="2" 
                              Stroke="{DynamicResource PrimaryBrush}" Data="{StaticResource GithubGeometry}"/>
        </Viewbox>
    </hc:TransitioningContentControl>
</UserControl>
