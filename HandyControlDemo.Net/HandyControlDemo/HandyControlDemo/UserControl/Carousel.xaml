<UserControl x:Class="HandyControlDemo.UserControl.Carousel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d">
    <hc:TransitioningContentControl>
        <hc:Carousel Margin="10" IsCenter="True" AutoRun="True" Width="600" Height="330" VerticalAlignment="Center">
            <Image Width="600" Stretch="UniformToFill" Source="pack://application:,,,/Resource/Image/1.jpg"/>
            <Image Width="300" Stretch="UniformToFill" Source="pack://application:,,,/Resource/Image/2.jpg"/>
            <hc:SimplePanel Width="600">
                <Image Stretch="UniformToFill" Source="pack://application:,,,/Resource/Image/3.jpg"/>
                <TextBlock Text="示例文本" Style="{StaticResource TextBlockDefault}" FontSize="100" FontWeight="Bold" Foreground="White"/>
            </hc:SimplePanel>
            <Image Width="600" Stretch="UniformToFill" Source="pack://application:,,,/Resource/Image/4.jpg"/>
            <Image Width="600" Stretch="UniformToFill" Source="pack://application:,,,/Resource/Image/5.jpg"/>
        </hc:Carousel>
    </hc:TransitioningContentControl>
</UserControl>
