<UserControl x:Class="HandyControlDemo.UserControl.Transfer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:viewmodel="clr-namespace:HandyControlDemo.ViewModel"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <viewmodel:TransferViewModel/>
    </UserControl.DataContext>
    <StackPanel>
        <hc:TransitioningContentControl>
            <hc:Transfer x:Name="transfer" ItemsSource="{Binding DataList}" Margin="10" Height="300">
                <hc:Transfer.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </hc:Transfer.ItemTemplate>
            </hc:Transfer>
        </hc:TransitioningContentControl>
        <Button Content="Show Info" Click="Button_Click"/>
    </StackPanel>
</UserControl>
